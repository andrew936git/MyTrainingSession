<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/toneExercisesIV"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tone_exercisesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_gravity="center"
        android:textSize="@dimen/_18sp"
        android:text="@string/tone_exercises"
        />
    <ImageView
        android:id="@+id/gymExercisesIV"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/gym_exercisesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_gravity="center"
        android:textSize="@dimen/_18sp"
        android:text="@string/gym_exercises_text"
        />
    <ImageView
        android:id="@+id/workoutExercisesIV"
        android:layout_width="@dimen/_150dp"
        android:layout_height="@dimen/_150dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/workout_exercisesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_gravity="center"
        android:textSize="@dimen/_18sp"
        android:text="@string/workout_exercises_text"
        />

</LinearLayout>